{
   "kind": "ReplicationController",
   "apiVersion": "v1",
   "metadata": {
      "name": "redis-secondary",
      "labels": {
         "app": "redis",
         "role": "slave"
      }
   },
   "spec": {
      "replicas": 2,
      "selector": {
         "app": "redis",
         "role": "slave"
      },
      "template": {
         "metadata": {
            "labels": {
               "app": "redis",
               "role": "slave"
            }
         },
         "spec": {
            "containers": [
               {
                  "name": "redis-secondary",
                  "image": "k8s.gcr.io/redis-slave:v2",
                  "ports": [
                     {
                        "name": "redis-server",
                        "containerPort": 6379
                     }
                  ]
               }
            ]
         }
      }
   }
}